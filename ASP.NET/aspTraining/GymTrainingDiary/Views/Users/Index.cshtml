@model IEnumerable<GymTrainingDiary.Model.User>

<h2>List of users</h2>


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LastLoginDate)
            </th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Photo);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src="@imgSrc" width="120" style="margin-top:15px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLoginDate)
                </td>

                <td style="margin-left:30px">
                    <p>@Html.ActionLink("View trainigs", "ViewTrainings", "Excersises", new { id = item.Id }, new { @class = "btn btn-primary", @style = "width:100%" })</p>
                    <p>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = "width:100%" })</p>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary", @style = "width:100%" })</p>
                    <p>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = "width:100%" })</p>
                </td>
            </tr>
        }
    </tbody>

</table>
